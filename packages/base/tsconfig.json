{
    "compilerOptions": {
        "lib": ["es2015", "DOM"],
        "outDir": "build",
        "noImplicitAny": true,
        "jsx": "react",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "module": "ESNext",
        "allowJs": true,
        "esModuleInterop": true,
        "rootDirs": ["src/components", "src/pages"],

        "paths": {
            "$c/*": ["./src/components/*"],
            "$p/*": ["./src/pages/*"],
            "$u/*": ["./src/utils/*"],
            "$a/*": ["./src/assets/*"]
        },

        "typeRoots": ["src/types"]
    },

    "exclude": ["./src/templates"],
    "include": ["src"]
}